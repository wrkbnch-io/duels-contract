{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "plugins": [
        "prettier-plugin-solidity"
    ],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "parser": "solidity-parse",
                "printWidth": 80,
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": true,
                "bracketSpacing": false
            }
        }
    ]
}